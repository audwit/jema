<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="emaPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>edu.mu.mscs.ubicomp.ema.entity.Activity</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.Answer</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.ContactingTime</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.Question</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.Schedule</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.User</class>
    <class>edu.mu.mscs.ubicomp.ema.entity.Notification</class>

    <properties>
      <property name="hibernate.connection.zeroDateTimeBehavior" value="convertToNull"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sm"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/sm"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="root"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sm"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.password" value="root"/>
      <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/sm"/>
      <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
      <property name="openjpa.ConnectionUserName" value="root"/>
      <property name="openjpa.ConnectionPassword" value="root"/>
      <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/sm"/>
      <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="eclipselink.jdbc.user" value="root"/>
      <property name="eclipselink.jdbc.password" value="root"/>
    </properties>

  </persistence-unit>

</persistence>
